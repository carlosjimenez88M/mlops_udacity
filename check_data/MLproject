name: check_data
conda_env: conda.yaml

entry_point:
    main:
        parameters:
            reference_artifact:
                description: design experiment
                type: str
            sample_artifact:
                description: sample to artifact
                type: str
            ks_alpha:
                description: Same parameters
                type: float

        command: >-
            pytest -s -vv. --reference_artifact {reference_artifact}\
                           --sample_artifact {sample_artifact}\
                           --ks_alpha {ks_alpha}

